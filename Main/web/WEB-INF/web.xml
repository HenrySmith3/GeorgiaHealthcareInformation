<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <display-name>Servlet</display-name>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>Servlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/html_form_action.asp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>english</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
        <init-param>
            <param-name>language</param-name>
            <param-value>english</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>spanish</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
        <init-param>
            <param-name>language</param-name>
            <param-value>spanish</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>response</servlet-name>
        <jsp-file>/response.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>editHospital</servlet-name>
        <jsp-file>/editHospital.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>submitComplaint</servlet-name>
        <jsp-file>/submitComplaint.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>clinic</servlet-name>
        <jsp-file>/clinic.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>bug</servlet-name>
        <jsp-file>/bug.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>english</servlet-name>
        <url-pattern>/english</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>spanish</servlet-name>
        <url-pattern>/spanish</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>response</servlet-name>
        <url-pattern>/response.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>editHospital</servlet-name>
        <url-pattern>/editHospital.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>submitComplaint</servlet-name>
        <url-pattern>/submitComplaint.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bug</servlet-name>
        <url-pattern>/bug.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>clinic</servlet-name>
        <url-pattern>/clinic.jsp</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
